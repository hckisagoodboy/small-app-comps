.root {
  position: relative; 
  z-index: 1; 
}

.root > image, .root > .load-box {
  width: 100%;
  height: 100%;
}

.root > .load-box {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #EEE;
}

.del-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  z-index: 2;
  top: calc(-50rpx / 2 + 50rpx / 10);
  right: calc(-50rpx / 2 + 50rpx / 10);
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
}

.del-icon > image {
  width: 50%;
  height: 50%;
}

